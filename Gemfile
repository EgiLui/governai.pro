source "https://rubygems.org"

# Optional: pin the Ruby version for consistency
ruby '2.6.3'

# Lock Jekyll version
gem "jekyll", "~> 4.3.2"

# Windows-specific gem for file system events
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

# Plugins
group :jekyll_plugins do
    gem 'jekyll-feed'
    gem 'jekyll-sitemap'
    gem 'jekyll-paginate'
    gem 'jekyll-seo-tag'
end
